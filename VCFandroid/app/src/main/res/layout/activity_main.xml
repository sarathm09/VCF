<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#e1f5fe"
    tools:context=".MainActivity">

    <view
        android:layout_width="200dp"
        android:layout_height="200dp"
        class="com.dd.CircularProgressButton"
        android:id="@+id/connect"
        app:cpb_textComplete="Success"
        app:cpb_textIdle="Backup to PC"
        app:cpb_textError="Error"
        app:cpb_cornerRadius="20dp"
        app:cpb_colorIndicator="@color/cpb_white"
        app:cpb_colorIndicatorBackground="@color/cpb_blue_dark"
        app:cpb_colorProgress="@color/cpb_grey"
        app:cpb_textProgress="Collecting Contacts..."
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
